<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student List</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('partials/header') %>

    <main>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Age</th>
                    <th>Course</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% students.forEach((student, index) => { %>
                    <tr>
                        <td><%= student.name %></td>
                        <td><%= student.age %></td>
                        <td><%= student.course %></td>
                        <td>
                            <a href="/students/details/<%= index %>">View Details</a>
                            <a href="/students/edit/<%= index %>">Edit</a>
                            <form action="/students/delete/<%= index %>" method="POST" style="display:inline;">
                                <button type="submit">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </main>

    <%- include('partials/footer') %>
</body>
</html>
